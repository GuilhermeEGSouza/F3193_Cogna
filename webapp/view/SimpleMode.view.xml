<mvc:View id="pod---simplemode--view" controllerName="zcogna.ewm.packoutbdlvs1.controller.Simple" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<Page showHeader="false" id="appPage" busy="{global>/busy}" floatingFooter="true">
		<OverflowToolbar design="Transparent" height="3rem" id="pod---simplemode--toolbar">
			<Title id="pod---simplemode--toolbar--title" class="sapUiMediumMarginBegin" titleStyle="H3"
				text="{parts:[{path:'global>/bin'},{path:'global>/workstation'}, {path: 'global>/warehouseNumber'}], formatter:'.formatTitle'}"></Title>
			<ToolbarSpacer id="pod---simplemode--space3"/>
			<OverflowToolbarMenuButton id="ShareButton" icon="sap-icon://action" type="Transparent" tooltip="{i18n>SHARE_BUTTON}"
				visible="{share>/isShareMenuButtonVisible}" text="">
				<layoutData>
					<OverflowToolbarLayoutData id="pod---simplemode--overflowtoolbarlayoutdata-id" shrinkable="false" priority="NeverOverflow"/>
				</layoutData>
				<menu>
					<Menu id="ShareMenu">
						<MenuItem id="shareEmailButton" icon="sap-icon://email" press="onShareEmailPressed" text="{share>/emailButtonText}" class="sapMFlexBox"/>
						<MenuItem id="bookmarkButton" icon="sap-icon://add-favorite" press="onSaveAsTilePressed" text="{share>/bookmarkButtonText}"
							class="sapMFlexBox"/>
					</Menu>
				</menu>
			</OverflowToolbarMenuButton>
		</OverflowToolbar>
		<content id="pod---ship--content">
			<l:Grid id="pod---simplemode--grid" class="sapUiTinyMargin">
				<mvc:XMLView viewName="zcogna.ewm.packoutbdlvs1.view.SimpleSource" id="id-source-view" type="XML">
					<mvc:layoutData>
						<l:GridData span="XL6 L6 M12 S12" id="pod---simplemode--source--layout"></l:GridData>
					</mvc:layoutData>
				</mvc:XMLView>
				<mvc:XMLView viewName="zcogna.ewm.packoutbdlvs1.view.SimpleShip" id="id-ship-view" type="XML">
					<mvc:layoutData>
						<l:GridData span="XL6 L6 M12 S12" id="pod---simplemode--ship--layout"></l:GridData>
					</mvc:layoutData>
				</mvc:XMLView>
			</l:Grid>
		</content>
		<footer id="id---simplemode--footer">
			<OverflowToolbar id="pod---simplemode--overflowtoolbar">
				<Button id="pod---simplemode--msg" icon="sap-icon://message-popup" type="Emphasized" press="onMessagePopoverPress"
					visible="{= ${message>/}.length > 0 ? true : false}" text="{= ${message>/}.length}" class="sapUiSmallMarginBegin"/>
				<ToolbarSpacer id="pod---simplemode--space1"/>
				<ToolbarSpacer id="pod---simplemode--space2"/>
				<Button text="{i18n>leave}" id="pod---simplemode--leave" type="Emphasized" press="onLeave" class="sapUiSmallMarginEnd"></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>