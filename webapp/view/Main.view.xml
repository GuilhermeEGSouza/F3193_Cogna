<mvc:View id="pod---main--view" controllerName="scm.ewm.packoutbdlvs1.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<Page showHeader="false" id="appPage" busy="{global>/busy}" floatingFooter="true">
		<OverflowToolbar design="Transparent" height="3rem" id="pod---main---overflowtoolbar">
			<Title id="pod---main--title" class="sapUiMediumMarginBegin"
				text="{parts:[{path:'global>/bin'}, {path:'global>/workstation'}, {path: 'global>/warehouseNumber'}], formatter:'.formatTitle'}"></Title>
			<ToolbarSpacer id="pod---main--space3"/>
			<OverflowToolbarMenuButton id="ShareButton" icon="sap-icon://action" type="Transparent" tooltip="{i18n>SHARE_BUTTON}"
				visible="{share>/isShareMenuButtonVisible}" text="">
				<layoutData>
					<OverflowToolbarLayoutData id="pod---main--overflowtoolbarlayoutdata-id" shrinkable="false" priority="NeverOverflow"/>
				</layoutData>
				<menu>
					<Menu id="ShareMenu">
						<MenuItem id="shareEmailButton" icon="sap-icon://email" press="onShareEmailPressed" text="{share>/emailButtonText}" class="sapMFlexBox"/>
						<MenuItem id="bookmarkButton" icon="sap-icon://add-favorite" press="onSaveAsTilePressed" text="{share>/bookmarkButtonText}"
							class="sapMFlexBox"/>
					</Menu>
				</menu>
			</OverflowToolbarMenuButton>
		</OverflowToolbar>
		<content>
			<l:Grid class="sapUiTinyMargin" id="pod---main--grid">
				<mvc:XMLView viewName="scm.ewm.packoutbdlvs1.view.Source" id="id-source-view" type="XML">
					<mvc:layoutData>
						<l:GridData span="XL6 L6 M12 S12" id="pod---main--source--layout"></l:GridData>
					</mvc:layoutData>
				</mvc:XMLView>
				<mvc:XMLView viewName="scm.ewm.packoutbdlvs1.view.Ship" id="id-ship-view" type="XML">
					<mvc:layoutData>
						<l:GridData span="XL6 L6 M12 S12" id="pod---main--ship--layout"></l:GridData>
					</mvc:layoutData>
				</mvc:XMLView>
			</l:Grid>
		</content>
		<footer>
			<OverflowToolbar id="pod---main--overflowtoolbar--msg">
				<Button icon="sap-icon://message-popup" type="Emphasized" press="onMessagePopoverPress" visible="{= ${message>/}.length > 0 ? true : false}"
					text="{= ${message>/}.length}" class="sapUiSmallMarginBegin" id="pod---main--message--button"/>
				<ToolbarSpacer id="pod---main--space"/>
				<ToolbarSpacer id="pod---main--space2"/>
				<Button id="leave-button" text="{i18n>leave}" press="onLeave" class="sapUiSmallMarginEnd"></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>